---
import clsx from "clsx";

type Props = {
  class?: string;
};

const { class: className } = Astro.props as Props;
---

<div class={clsx("pattern bg-lime-400 h-5", className)}></div>

<style>
  .pattern {
    background-image: url("/svg/pattern.svg");
    background-size: 500px;
    background-repeat: repeat;
  }
</style>

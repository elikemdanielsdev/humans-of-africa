---
import clsx from "clsx";

const tags = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
};

const weights = {
  thin: "font-thin",
  normal: "font-normal",
  medium: "font-medium",
  semibold: "font-semibold",
  bold: "font-bold",
  extrabold: "font-extrabold",
};

const sizes = {
  h1: "text-display-1 leading-tight",
  h2: "text-display-2 leading-tight",
  h3: "text-display-3 leading-tight",
  h4: "text-display-4 leading-tight",
  h5: "text-display-5 leading-tight",
  h6: "text-display-6 leading-tight",
};

type Props = {
  class?: string;
  tag: keyof typeof tags;
  size?: keyof typeof sizes;
  weight?: keyof typeof weights;
};

const {
  tag: Tag = "h1",
  size = sizes[Tag],
  class: className,
  weight = "bold",
} = Astro.props as Props;
---

<Tag class={clsx(size, weights[weight], className)}>
  <slot />
</Tag>
